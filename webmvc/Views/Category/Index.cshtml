@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification"/>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary ">
               <div class="d-flex align-items-center justify-content-center">
                    <i class="bi bi-plus-circle"></i> &nbsp
                    Create new Category
               </div>
            </a>
        </div>
    </div>
</div>

<table class="table table-bodered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                CategoryId
            </th>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.CategoryId
                </td>
                <td width="50%">
                    @obj.Name
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit"
                       asp-route-id="@obj.CategoryId" class="btn btn-primary mx-3">
                              <i class="bi bi-pencil-square" ></i>
                        </a>
                          <a asp-controller="Category" asp-action="Delete"
                       asp-route-id="@obj.CategoryId" class="btn btn-danger mx-3">
                       Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>